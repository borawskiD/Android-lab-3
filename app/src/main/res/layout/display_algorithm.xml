<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <TextView
        android:id="@+id/description"
        android:layout_width="339dp"
        android:layout_height="231dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="38dp"
        android:text="@string/algorithm_description_placeholder"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afterText" />

    <TextView
        android:id="@+id/before"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="68dp"
        android:text="@string/Unsorted_array_placeholder"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/afterText"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/sorted_array_placeholder"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/before" />

</androidx.constraintlayout.widget.ConstraintLayout>